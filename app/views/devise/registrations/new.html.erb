<h2>ユーザー登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
<table class="form">
          <tr>
            <th><%= f.label :name %></th>
            <td><%= f.text_field :name, autofocus: true, placeholder: "5文字以上" %></td>
          </tr>
          <tr>
            <th><%= f.label :password %></th>
            <td><%= f.password_field :password, placeholder: "6文字以上" %></td>
          </tr>
          <tr>
            <th><%= f.label :password_confirmation%></th>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <th><%= f.label :baby_due_on %></th>
            <td><%= f.date_select :baby_due_on, use_month_numbers: true, include_blank: true, selected: Date.today, start_year: (Time.now.year), end_year: (Time.now.year + 1) %></td>
          </tr>
            </table>
      <div class="action button_to">
        <%= f.submit "登録" %>
      </div>
    <% end %>
