<h1></h1>
<%= month_calendar diaries: @diaries do |date, diaries| %>
  <%= date.day %>
<% end %>
<h3>今日食べたおさかなを登録</h3>
<%= form_with(model: @diary, local: true) do |form| %>

  <div class="field fishname">
    <%= form.label :name %>
    <%= form.hidden_field :name %>
    <!-- <button v-on:click="openModal">魚を選択</button> -->
  </div>

    <div class="field">
    <%= form.label :amount %>
    <%= form.text_field :amount %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>

