<h1></h1>
<%= column_chart({ "水銀（直近7日）" => @total_mercury }) %>
<%= button_to '今食べたおさかな登録',new_diary_path, method: :get %>
<%= month_calendar events: @diaries do |date, diaries| %>
  <%= link_to date, diary_path(date.strftime('%Y-%m-%d')) %>
  <% diaries.each do |diary| %>
    <div>
      <%= diary.fish.name %>
    </div>
  <% end %>
<% end %>
